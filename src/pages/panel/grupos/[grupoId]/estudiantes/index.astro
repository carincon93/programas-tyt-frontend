---
import PanelLayout from "@/layouts/PanelLayout.astro";
import EstudiantesTable from "./_table";
import {
  Breadcrumb,
  BreadcrumbItem,
  BreadcrumbLink,
  BreadcrumbList,
  BreadcrumbSeparator,
} from "@/components/ui/breadcrumb";

const { grupoId } = Astro.params;
---

<PanelLayout title="Estudiantes">
  <Breadcrumb className="text-xs mb-6">
    <BreadcrumbList>
      <BreadcrumbItem>
        <BreadcrumbLink href="/panel/grupos" className="font-bold">Grupos</BreadcrumbLink>
      </BreadcrumbItem>
      <BreadcrumbSeparator />
      <BreadcrumbItem>Estudiantes</BreadcrumbItem>
    </BreadcrumbList>
  </Breadcrumb>

  <EstudiantesTable grupoId={grupoId} client:load />
</PanelLayout>
