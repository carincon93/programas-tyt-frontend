---
import PanelLayout from "@/layouts/PanelLayout.astro";
import HorarioTable from "./_table";
import {
  Breadcrumb,
  BreadcrumbItem,
  BreadcrumbLink,
  BreadcrumbList,
  BreadcrumbSeparator,
} from "@/components/ui/breadcrumb";

const { asignaturaId, profesorId } = Astro.params;
---

<PanelLayout title="Horario">
  <Breadcrumb className="text-xs mb-6">
    <BreadcrumbList>
      <BreadcrumbItem>
        <BreadcrumbLink href="/panel/asignaturas" className="font-bold">Asignaturas</BreadcrumbLink>
      </BreadcrumbItem>
      <BreadcrumbSeparator />
      <BreadcrumbItem>Horarios</BreadcrumbItem>
    </BreadcrumbList>
  </Breadcrumb>
  <HorarioTable
    asignaturaProfesorId={asignaturaId}
    profesorId={profesorId}
    client:load
  />
</PanelLayout>
